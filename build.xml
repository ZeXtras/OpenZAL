  <target name="fast-compatibility-check" description="check compatibility of zal jars">

    <if>
      <equals arg1="4" arg2="0" />
      <then>
        <var name="lastZalPath" value="" />
      </then>
      <else>
        <var name="lastZalPath" value="bin/previous-zal-version.jar" />
      </else>
    </if>

    <for list="6.0.16,7.2.7,8.0.9,8.5.1,8.6.0,8.7.2" param="currentZimbraVersion">
      <sequential>
        <if>
          <equals arg1="${lastZalPath}" arg2="" />
          <else>
            <exec failonerror="true" executable="../build-commons/japi-compliance-checker/japi-compliance-checker.pl">
              <arg value="-binary"/>
              <arg value="-l"/>
              <arg value="OpenZal"/>
              <arg value="${lastZalPath}"/>
              <arg value="dist/@{currentZimbraVersion}/zal.jar"/>
            </exec>
          </else>
        </if>
        <var name="lastZalPath" value="dist/@{currentZimbraVersion}/zal.jar" />
      </sequential>
    </for>

    <exec failonerror="true" executable="../build-commons/japi-compliance-checker/japi-compliance-checker.pl">
      <arg value="-binary"/>
      <arg value="-l"/>
      <arg value="OpenZal"/>
      <arg value="dist/8.7.2/zal.jar"/>
      <arg value="dist/6.0.7/zal.jar"/>
    </exec>
  </target>

  <target name="compatibility-check" description="check compatibility of zal jars">

    <if>
      <equals arg1="4" arg2="0" />
      <then>
        <var name="lastZalPath" value="" />
      </then>
      <else>
        <var name="lastZalPath" value="bin/previous-zal-version.jar" />
      </else>
    </if>

    <for list="6.0.7,6.0.8,6.0.9,6.0.10,6.0.12,6.0.13,6.0.14,6.0.15,6.0.16,7.0.0,7.0.1,7.1.0,7.1.1,7.1.2,7.1.3,7.1.4,7.2.0,7.2.1,7.2.2,7.2.3,7.2.4,7.2.5,7.2.6,7.2.7,8.0.0,8.0.1,8.0.2,8.0.3,8.0.4,8.0.5,8.0.6,8.0.7,8.0.8,8.0.9,8.5.0,8.5.1,8.6.0,8.7.0,8.7.1,8.7.2" param="currentZimbraVersion">
      <sequential>
        <if>
          <equals arg1="${lastZalPath}" arg2="" />
          <else>
            <exec failonerror="true" executable="../build-commons/japi-compliance-checker/japi-compliance-checker.pl">
              <arg value="-binary"/>
              <arg value="-l"/>
              <arg value="OpenZal"/>
              <arg value="${lastZalPath}"/>
              <arg value="dist/@{currentZimbraVersion}/zal.jar"/>
            </exec>
          </else>
        </if>
        <var name="lastZalPath" value="dist/@{currentZimbraVersion}/zal.jar" />
      </sequential>
    </for>

    <exec failonerror="true" executable="../build-commons/japi-compliance-checker/japi-compliance-checker.pl">
      <arg value="-l"/>
      <arg value="OpenZal"/>
      <arg value="dist/8.7.2/zal.jar"/>
      <arg value="dist/6.0.7/zal.jar"/>
    </exec>
  </target>

  <macrodef name="prepare-build-template">
    <attribute name="srcFile"/>
    <attribute name="destFile"/>

    <sequential>
      <copy file="@{srcFile}"
            tofile="@{destFile}"/>
      <replace file="@{destFile}">
        <replacefilter
          token="@VERSION@"
          value="1.11.4"/>
        <replacefilter
          token="@VERSION_MAJOR@"
          value="1"/>
        <replacefilter
          token="@VERSION_MINOR@"
          value="11"/>
        <replacefilter
          token="@VERSION_MICRO@"
          value="4"/>
        <replacefilter
          token="@FIRST_ZIMBRA_VERSION@"
          value="6.0.7"/>
        <replacefilter
          token="@LAST_ZIMBRA_VERSION@"
          value="8.7.2"/>
      </replace>
    </sequential>
  </macrodef>

  <target name="package-deb"
          depends="clean, zal-all">
    <local name="deb-dir-tmp"/>
    <property name="deb-dir-tmp" location="deb"/>

    <delete dir="${deb-dir-tmp}"/>

    <mkdir dir="${deb-dir-tmp}"/>
    <mkdir dir="${deb-dir-tmp}/openzal-1.11"/>
    <mkdir dir="${deb-dir-tmp}/openzal-1.11/usr/share/openzal/1.11"/>
    <mkdir dir="${deb-dir-tmp}/openzal-1.11/DEBIAN"/>

    <prepare-build-template srcFile="tools/deb_control_template"
                            destFile="${deb-dir-tmp}/openzal-1.11/DEBIAN/control" />

    <copy todir="${deb-dir-tmp}/openzal-1.11/usr/share/openzal/1.11">
      <fileset dir="dist">
        <include name="**/zal.jar"/>
      </fileset>
    </copy>

    <exec executable="dpkg-deb"
          dir="${deb-dir-tmp}"
          failonerror="true">
      <arg value="--build"/>
      <arg value="openzal-1.11"/>
    </exec>
    <move file="${deb-dir-tmp}/openzal-1.11.deb" todir="." />

    <delete dir="${deb-dir-tmp}"/>
  </target>

  <target name="package-rpm"
          depends="clean, zal-all">
    <local name="rpm-dir-tmp"/>
    <property name="rpm-dir-tmp" location="rpm"/>

    <delete dir="${rpm-dir-tmp}"/>

    <mkdir dir="${rpm-dir-tmp}"/>
    <mkdir dir="${rpm-dir-tmp}/openzal-1.11"/>
    <mkdir dir="${rpm-dir-tmp}/openzal-1.11/buildroot/usr/share/openzal/1.11"/>
    <mkdir dir="${rpm-dir-tmp}/openzal-1.11/SPEC"/>
    <mkdir dir="${rpm-dir-tmp}/openzal-1.11/RPMS"/>

    <prepare-build-template srcFile="tools/rpm_spec_template"
                            destFile="${rpm-dir-tmp}/openzal-1.11/SPEC/openzal-1.11.spec" />

    <copy todir="${rpm-dir-tmp}/openzal-1.11/buildroot/usr/share/openzal/1.11">
      <fileset dir="dist">
        <include name="**/zal.jar"/>
      </fileset>
    </copy>

    <exec executable="rpmbuild"
          dir="${rpm-dir-tmp}"
          failonerror="true">
      <arg value="-bb"/>
      <arg value="--buildroot"/><arg value="${rpm-dir-tmp}/openzal-1.11/buildroot"/>
      <arg value="openzal-1.11/SPEC/openzal-1.11.spec"/>
    </exec>
    <move file="${rpm-dir-tmp}/openzal-1.11/RPMS/noarch/openzal-1.11-4-0.noarch.rpm" todir="." />

    <delete dir="${rpm-dir-tmp}"/>
  </target>

